<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_left">

    <ScrollView
        android:id="@+id/refresh_view_profile"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/round_pic"
                android:layout_width="95.0dip"
                android:layout_height="95.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_default" />

            <TextView
                android:id="@+id/lever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="甩手小掌柜"
                android:textColor="#939393"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/customer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:clickable="true"
                android:paddingLeft="34dp">

                <ImageView
                    android:id="@+id/customer_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/left_customer" />

                <TextView
                    android:id="@+id/customer_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/customer_icon"
                    android:drawablePadding="26dp"
                    android:gravity="center"
                    android:text="@string/left_customer"
                    android:textColor="#939393"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/raise_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/customer_number"
                    android:text="+0"
                    android:textColor="#dd137c"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/customer_number"
                    android:layout_below="@id/customer_number"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/left_line" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sales_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:paddingLeft="34dp">

                <ImageView
                    android:id="@+id/sales_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/left_sales_total" />

                <TextView
                    android:id="@+id/sales_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/sales_icon"
                    android:drawablePadding="26dp"
                    android:gravity="center"
                    android:text="@string/left_sales_total"
                    android:textColor="#939393"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/raise_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/sales_total"
                    android:text="+0"
                    android:textColor="#dd137c"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/sales_total"
                    android:layout_below="@id/sales_total"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/left_line" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/income_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:paddingLeft="34dp">

                <ImageView
                    android:id="@+id/income_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/left_total" />

                <TextView
                    android:id="@+id/income_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/income_icon"
                    android:drawablePadding="26dp"
                    android:gravity="center"
                    android:text="@string/left_income"
                    android:textColor="#939393"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/raise_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/income_total"
                    android:text="+0"
                    android:textColor="#dd137c"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/income_total"
                    android:layout_below="@id/income_total"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/left_line" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cash_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:paddingLeft="34dp">

                <ImageView
                    android:id="@+id/cash_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/left_can_cash" />

                <TextView
                    android:id="@+id/cash_can"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/cash_icon"
                    android:drawablePadding="26dp"
                    android:gravity="center"
                    android:text="@string/left_cash"
                    android:textColor="#939393"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/raise_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/cash_can"
                    android:text="+0"
                    android:textColor="#dd137c"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/cash_can"
                    android:layout_below="@id/cash_can"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/left_line" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>