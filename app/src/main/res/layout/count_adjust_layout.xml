<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/count_adjust_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/count_adjust_shoppingcart_left" />

    <com.geek.geekmall.views.CustomTextView
        android:id="@+id/count_adjust_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cart_btn_input"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/content_black"
        android:textSize="16.0sp" />

    <ImageButton
        android:id="@+id/count_adjust_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/count_adjust_shoppingcart_right" />
</LinearLayout>