<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="14.0dip">

    <View
        android:id="@+id/header_line"
        style="@style/FirstDividerViewStyle" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="10.0dip">

        <LinearLayout
            android:id="@+id/store_name_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.geek.geekmall.views.CustomCheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shopping_cart_radio_selector"
                android:button="@null" />

            <com.geek.geekmall.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:singleLine="true"
                android:text="@string/shop_label"
                android:textColor="@color/shopcart_brown"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <com.geek.geekmall.views.CustomTextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="5.0dip"
                android:maxWidth="165.0dip"
                android:singleLine="true"
                android:textColor="@color/main_pink"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/promotion_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/store_name_lay"
            android:layout_marginTop="10.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.geek.geekmall.views.CustomCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shopping_cart_radio_selector"
                android:button="@null"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/promotion_ico_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/shoppingcart_ico_free_delivery" />

            <com.geek.geekmall.views.CustomTextView
                android:id="@+id/promotion_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:maxWidth="200.0dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/shopcart_light_brown"
                android:textSize="14.0sp" />

            <ImageView
                android:id="@+id/promotion_ico_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/shoppingcart_ico_full_reduction" />

            <com.geek.geekmall.views.CustomTextView
                android:id="@+id/promotion_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:singleLine="true"
                android:textColor="@color/shopcart_light_brown"
                android:textSize="14.0sp" />
        </LinearLayout>

        <View
            android:id="@+id/line"
            style="@style/FirstDividerViewStyle"
            android:layout_width="fill_parent"
            android:layout_below="@+id/promotion_lay"
            android:layout_marginTop="0.0dip" />

        <LinearLayout
            android:id="@+id/coupon_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5.0dip">

            <com.geek.geekmall.views.CustomCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shopping_cart_radio_selector"
                android:button="@null"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/promotion_ico_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/shoppingcart_ico_coupon" />

            <com.geek.geekmall.views.CustomTextView
                android:id="@+id/promotion_text_3"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/shopcart_light_brown"
                android:textSize="14.0sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coupons_arrow_pink" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/header_line2"
        style="@style/FirstDividerViewStyle" />
</LinearLayout>