<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="noMultiTouchNoTitleBar" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>
    <style name="noMultiTouchTranslucentNoTitleBar" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>
    <style name="multiTouchNotitleBar" parent="@android:style/Theme.NoTitleBar">
        <item name="android:splitMotionEvents">true</item>
        <item name="android:windowEnableSplitTouch">true</item>
    </style>
    <style name="borderline_slide">
        <item name="android:background">#1a333333</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>
    <style name="mainHeader">
        <item name="android:background">@drawable/main_header_bg</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/main_title_bar_height</item>
    </style>
    <style name="TopBackBtn">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/back</item>
        <item name="android:drawableLeft">@drawable/personal_ico_return</item>
        <item name="android:drawablePadding">-10.0dip</item>
    </style>
    <style name="backBtn">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/personal_ico_return</item>
    </style>
    <style name="header">
        <item name="android:background">@drawable/main_header_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_height">@dimen/main_title_bar_height</item>
    </style>
    <style name="TopRightBtn">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="headerTextStyle">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">200.0dip</item>
    </style>
    <style name="SlideBarTtyle">
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:paddingBottom">8.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FirstDividerViewStyle">
        <item name="android:background">#26595056</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>
    <style name="EmptyDataButtonTextStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff80737b</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_empty_bg</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">20.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="EmptyDataFirstTextStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff595056</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>
    <style name="EmptyDataSecondTextStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffccc2c9</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15.0dip</item>
    </style>

    <!--indicator-->
    <style name="StyledIndicators" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/pink</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">4dp</item>
        <item name="centered">true</item>
    </style>
    <style name="CustomTabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/CustomTabTextAppearance</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CustomTabTextAppearance" parent="Widget">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tab_selector</item>
    </style>

    <style name="BtnYellowStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_yellow_bg</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="BtnRedStyleDanBao">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_red_bg</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="DialogLoading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--下载dialog-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <style name="Theme.animation" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
    <style name="GridPasswordView" />

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
</resources>
